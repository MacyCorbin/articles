{{!-- Templating for all Articles  --}}

{{#each articles}}
  <ul class="collapsible" data-collapsible="accordion" style = "margin-top: 50px">

    <!-- Article Drop Down -->
    <li>
      <div style="background-color: #38C790; color: white; padding-top: 15px; font-size: 20px" class="collapsible-header">
        <i class="material-icons">import_contacts</i> <b>{{updated}}</b>
        <div style="clear: left; line-height: 110%; padding-bottom: 30px;"><b>{{title}}</b></div>
      </div>
      <div class="collapsible-body">
        <p>
          {{summary}}

          <br><br>

          <i>Please read the full article <a href="{{link}}" target="_new">here</a>.</i>
        </p>
          
      </div>
    </li>


    <!-- Add Comments -->
    <li>
      <div class="collapsible-header"><i class="material-icons">add</i>Add a Comment</div>
      <div class="collapsible-body" style="color:#2A3852">

        <form id="form-add-{{_id}}" action="add/comment/{{_id}}" method="post" style="background-color: white;">

          <!-- Author Name -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <input id="author_name" name="name" type="text" class="validate">
              <label for="author_name">Your Name:</label>
            </div>
          </div>
          
          <!-- Add Comment -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <textarea id="comment_box" name="comment" class="materialize-textarea"></textarea>
              <label for="comment_box">Your Reaction:</label>
            </div>
          </div>

            <!-- Submit -->
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn add-comment-button" data-id="{{_id}}" type="submit" value="Submit"></center>
              </div>
            </div>
          
        </form>

      </div>
    </li>


    <!-- View Comments -->
    <li>
      <div class="collapsible-header"><i class="material-icons">forum</i>View Comments</div>
      <div class="collapsible-body">
      
        {{#if comments}}

          <ul class="collection">
            {{#each comments}}
            
              <li class="collection-item">

                {{!-- Add Author Name --}}
                <b>{{author}}</b> 

                {{!-- Delete Button --}}
                <span class="badge">
                  <form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
                    <input class="btn-small delete-comment-button" data-id="{{_id}}" type="submit" value="Delete" style="color: white; background-color: red; border-color: red;">
                  </form>
                </span>

                <br>

                {{!-- Comment Content --}}
                {{content}}

              </li> 
            {{/each}}
          </ul>
        
        {{!-- If no comments it will show this --}}
        {{else}}
          <p>No Comments Yet</p>
        {{/if}}
            
        
      </div>
    </li>

  </ul>
{{/each}}